#!/usr/bin/env bash
set -euo pipefail

# Sync README.md to npm package directories
# This ensures npmjs.com displays the current README

ROOT_README="README.md"

if [[ -f "$ROOT_README" ]]; then
    cp "$ROOT_README" packages/core/README.md
    cp "$ROOT_README" packages/cli-node/README.md
    git add packages/core/README.md packages/cli-node/README.md
fi
